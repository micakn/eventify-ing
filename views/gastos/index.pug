//- views/gastos/index.pug
extends ../layout/layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    div
      h1 
        i.bi.bi-cash-stack.me-2
        | Gestión de Gastos
      p.text-muted Administra los gastos de eventos
    a.btn.btn-primary(href="/gastos/nuevo")
      i.bi.bi-plus-circle.me-2
      | Nuevo Gasto

  .card
    .card-body
      if gastos && gastos.length > 0
        .table-responsive
          table.table.table-hover
            thead.table-dark
              tr
                th Número
                th Evento
                th Descripción
                th Monto
                th Estado
                th Fecha
                th Acciones
            tbody
              each gasto in gastos
                tr
                  td= gasto.numero || '-'
                  td= gasto.evento?.nombre || '-'
                  td= gasto.descripcion || '-'
                  td= gasto.total ? `$${gasto.total.toLocaleString()}` : '-'
                  td
                    span.badge(class={
                      'bg-warning': gasto.estado === 'pendiente',
                      'bg-info': gasto.estado === 'aprobado',
                      'bg-success': gasto.estado === 'pagado',
                      'bg-danger': gasto.estado === 'cancelado'
                    })= gasto.estado || 'pendiente'
                  td= gasto.fecha ? new Date(gasto.fecha).toLocaleDateString() : '-'
                  td
                    .btn-group
                      a.btn.btn-sm.btn-outline-primary(href=`/gastos/${gasto.id}`)
                        i.bi.bi-eye
                      a.btn.btn-sm.btn-outline-secondary(href=`/gastos/editar/${gasto.id}`)
                        i.bi.bi-pencil
                      button.btn.btn-sm.btn-outline-danger(
                        type="button",
                        onclick=`confirmDelete('${gasto.id}')`
                      )
                        i.bi.bi-trash
      else
        .text-center.py-5
          i.bi.bi-cash-stack.fs-1.text-muted
          p.mt-3 No hay gastos registrados
          a.btn.btn-primary(href="/gastos/nuevo") Agregar primer gasto

block scripts
  script.
    function confirmDelete(id) {
      if (confirm('¿Estás seguro de eliminar este gasto?')) {
        fetch(`/gastos/${id}?_method=DELETE`, { method: 'POST' })
          .then(response => {
            if (response.redirected) {
              window.location.href = response.url;
            } else {
              return response.json();
            }
          })
          .then(data => {
            if (data?.mensaje) {
              setTimeout(() => location.reload(), 1200);
            }
          })
          .catch(error => console.error('Error:', error));
      }
    }

