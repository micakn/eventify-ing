//- views/proveedores/index.pug
extends ../layout/layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    div
      h1 
        i.bi.bi-building.me-2
        | Gestión de Proveedores
      p.text-muted Administra tu red de proveedores
    a.btn.btn-primary(href="/proveedores/nuevo")
      i.bi.bi-plus-circle.me-2
      | Nuevo Proveedor

  .card
    .card-body
      if proveedores && proveedores.length > 0
        .table-responsive
          table.table.table-hover
            thead.table-dark
              tr
                th Nombre
                th Contacto
                th Email
                th Teléfono
                th Estado
                th Acciones
            tbody
              each proveedor in proveedores
                tr
                  td= proveedor.nombre
                  td= proveedor.contacto?.nombre || '-'
                  td= proveedor.contacto?.email || '-'
                  td= proveedor.contacto?.telefono || '-'
                  td
                    span.badge(class=proveedor.activo ? 'bg-success' : 'bg-secondary')= proveedor.activo ? 'Activo' : 'Inactivo'
                  td
                    .btn-group
                      a.btn.btn-sm.btn-outline-primary(href=`/proveedores/${proveedor.id}`)
                        i.bi.bi-eye
                      a.btn.btn-sm.btn-outline-secondary(href=`/proveedores/editar/${proveedor.id}`)
                        i.bi.bi-pencil
                      button.btn.btn-sm.btn-outline-danger(
                        type="button",
                        onclick=`confirmDelete('${proveedor.id}')`
                      )
                        i.bi.bi-trash
      else
        .text-center.py-5
          i.bi.bi-building.fs-1.text-muted
          p.mt-3 No hay proveedores registrados
          a.btn.btn-primary(href="/proveedores/nuevo") Agregar primer proveedor

block scripts
  script.
    function confirmDelete(id) {
      if (confirm('¿Estás seguro de eliminar este proveedor?')) {
        fetch(`/proveedores/${id}?_method=DELETE`, { method: 'POST' })
          .then(response => {
            if (response.redirected) {
              window.location.href = response.url;
            } else {
              return response.json();
            }
          })
          .then(data => {
            if (data?.mensaje) {
              setTimeout(() => location.reload(), 1200);
            }
          })
          .catch(error => console.error('Error:', error));
      }
    }

