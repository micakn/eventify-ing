//- views/proveedores/form.pug
extends ../layout/layout

block content
  .container.mt-4
    .row.justify-content-center
      .col-md-8
        .card
          .card-header
            h3= formTitle || 'Formulario de Proveedor'
          .card-body
            form(method="POST", action=formAction)
              .mb-3
                label.form-label(for="nombre") Nombre *
                input.form-control#nombre(type="text", name="nombre", value=proveedor ? proveedor.nombre : '', required)
              
              .mb-3
                label.form-label(for="contactoNombre") Nombre de Contacto
                input.form-control#contactoNombre(type="text", name="contacto.nombre", value=proveedor ? proveedor.contacto?.nombre : '')
              
              .row
                .col-md-6
                  .mb-3
                    label.form-label(for="contactoEmail") Email de Contacto
                    input.form-control#contactoEmail(type="email", name="contacto.email", value=proveedor ? proveedor.contacto?.email : '')
                .col-md-6
                  .mb-3
                    label.form-label(for="contactoTelefono") Teléfono de Contacto
                    input.form-control#contactoTelefono(type="tel", name="contacto.telefono", value=proveedor ? proveedor.contacto?.telefono : '')
              
              .mb-3
                label.form-label(for="condicionImpositiva") Condición Impositiva
                select.form-select#condicionImpositiva(name="condicionImpositiva")
                  option(value="Responsable Inscripto", selected=(proveedor && proveedor.condicionImpositiva === 'Responsable Inscripto')) Responsable Inscripto
                  option(value="Monotributo", selected=(proveedor && proveedor.condicionImpositiva === 'Monotributo')) Monotributo
                  option(value="Exento", selected=(proveedor && proveedor.condicionImpositiva === 'Exento')) Exento
                  option(value="No Responsable", selected=(proveedor && proveedor.condicionImpositiva === 'No Responsable')) No Responsable
              
              .mb-3
                label.form-label(for="notas") Notas
                textarea.form-control#notas(name="notas", rows="3")= proveedor ? proveedor.notas : ''
              
              .d-flex.gap-2
                button.btn.btn-primary(type="submit")
                  i.bi.bi-check-circle.me-2
                  = proveedor ? 'Actualizar' : 'Crear'
                a.btn.btn-secondary(href="/proveedores")
                  i.bi.bi-arrow-left.me-2
                  | Cancelar

