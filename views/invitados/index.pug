//- views/invitados/index.pug
extends ../layout/layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    div
      h1 
        i.bi.bi-person-check.me-2
        | Gestión de Invitados
      p.text-muted Administra los invitados a eventos
    a.btn.btn-primary(href="/invitados/nuevo")
      i.bi.bi-plus-circle.me-2
      | Nuevo Invitado

  .card
    .card-body
      if invitados && invitados.length > 0
        .table-responsive
          table.table.table-hover
            thead.table-dark
              tr
                th Nombre
                th Apellido
                th Email
                th Teléfono
                th Evento
                th Acciones
            tbody
              each invitado in invitados
                tr
                  td= invitado.nombre
                  td= invitado.apellido
                  td= invitado.email || '-'
                  td= invitado.telefono || '-'
                  td= (invitado.evento && invitado.evento.nombre) || '-'
                  td
                    .btn-group
                      a.btn.btn-sm.btn-outline-primary(href=`/invitados/${invitado.id}`)
                        i.bi.bi-eye
                      button.btn.btn-sm.btn-outline-danger(
                        type="button",
                        onclick=`confirmDelete('${invitado.id}')`
                      )
                        i.bi.bi-trash
      else
        .text-center.py-5
          i.bi.bi-person-check.fs-1.text-muted
          p.mt-3 No hay invitados registrados
          a.btn.btn-primary(href="/invitados/nuevo") Agregar primer invitado

block scripts
  script.
    function confirmDelete(id) {
      if (confirm('¿Estás seguro de eliminar este invitado?')) {
        fetch(`/invitados/${id}?_method=DELETE`, { method: 'POST' })
          .then(response => {
            if (response.redirected) {
              window.location.href = response.url;
            } else {
              return response.json();
            }
          })
          .then(data => {
            if (data?.mensaje) {
              setTimeout(() => location.reload(), 1200);
            }
          })
          .catch(error => console.error('Error:', error));
      }
    }

